{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/augustoerico/bahoth-characters-api/master/schemas/character-create.json",
    "type": "object",
    "required": [
        "name"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "pattern": "\\w+(\\s+\\w+)*",
            "minLength": 1,
            "maxLength": 128
        }
    }
}